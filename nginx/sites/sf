index app.php;

location = /favicon.ico {
    access_log off;
    log_not_found off;
}

location = / {
    try_files $uri /app.php$is_args$args;
}

location ~ ^/(app|app_dev)\.php(/|$) {
    include /etc/nginx/fastcgi.conf;

    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_split_path_info ^(.+\.php)(/.*)$;
}

