server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    server_name dev localhost zoidberg 127.0.0.1;
    root /home/talus/dev/web;

    index index.php index.html index.htm;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location = / {
        try_files $uri =404;
    }

    location ~ \.php(/|$) {
        include /etc/nginx/fastcgi.conf;

        try_files $uri =404;

        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
    }

    error_log /home/talus/dev/web/logs/error_nginx.log;
    access_log /home/talus/dev/web/logs/access_nginx.log;
}
